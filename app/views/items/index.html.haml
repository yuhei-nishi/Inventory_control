= render "items/header"
.product
  .product_box
    .product_box_titel
      = current_user.name
      さんの冷蔵庫一覧
    %span ※賞味期限の近い順
    .product_box_item
      .product_box_item_list
        .product_box_item_list_expiration
          賞味期限
        .product_box_item_list_name
          食品名
        .product_box_item_list_stock
          個数
        .product_box_item_list_purchase
          購入日
        .product_box_item_list_btn
          .product_box_item_list_btn_edit
            %span.edit_btn
              編集
          .product_box_item_list_btn_delete
            %span.edit_btn
              削除
      - @items.each do |item|
        - if user_signed_in? && current_user.id == item.user_id
          .product_box_item_list
            .product_box_item_list_expiration
              =item.expiration
            .product_box_item_list_name
              =item.name
            .product_box_item_list_stock
              =item.stock
            .product_box_item_list_purchase
              =item.purchase
            .product_box_item_list_btn
              = link_to edit_item_path(item) do
                .product_box_item_list_btn_edit
                  %span.edit_btn
                    編集
              = link_to item_path(item),method: :delete do
                .product_box_item_list_btn_delete
                  %span.delete_btn
                    削除
= render 'exisibition'
  